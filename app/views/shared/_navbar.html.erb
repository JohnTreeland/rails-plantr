<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" class="text-start">
  <div class="container-fluid">
    <div class="d-flex">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "https://cdn-icons-png.flaticon.com/512/100/100662.png" %>
        <%#= image_tag("logo.jpeg") %>
      <% end %>
      <h1 class="title">Plantr</h1>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <% if current_user.sitter %>
            <li class="nav-item active">
              <%= link_to "Add sitter", new_user_sitter_path(current_user), class: "nav-link" %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to "View all sitters", sitters_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
          <% if current_user.photo.attached?  %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, style: "height: 50px" %>
            <% else %>
            <%= image_tag "https://media.istockphoto.com/vectors/aloe-vera-in-doodle-style-cute-cartoon-plant-in-pot-colorful-vector-vector-id1354593962?k=20&m=1354593962&s=612x612&w=0&h=y4zu6MSY3yNT3cWMV1dDhAijUYJBl0uvH8YDl8fLWmU=", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <% if current_user.sitter %>
                <%= link_to "View my sitters", user_sitters_path(current_user), class: "dropdown-item" %>
              <% end %>
              <%= link_to "View my bookings", bookings_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
            </div>
          </li>
        <% else %>
          <li class="btn btn-primary">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
